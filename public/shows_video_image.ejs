                          <tr>
                            <td>

                              
                                <img  id="disp_picture" src="<%=p.pname%>"/>
                               </td>
                          </tr>
                          <tr>
                            <td>
                                <form method="POST" action="/like_image">
                                  <%if(p.likes==0){%>
                                <button type="submit"  name="likeimagebutton" value="<%=p.pname%>">
                                    <img   width="38" height="38" src="bl.png" id="image_votes" />
                                  </button>
                                  <b class="bolds">LIKES         <%=p.likes%></b>
                                  <%}else{%>
                                    <button type="submit"  name="likeimagebutton" value="<%=p.pname%>" disabled>
                                        <img   width="38" height="38" src="al.png" id="image_votes" />
                                      </button>
                                      <b class="bolds">LIKES         <%=p.likes%></b>  <%}%>
                                  </form>
                                  <form method="POST" action="/upvote_image">
                                    <%if(p.upvotes==0){%>
                                  <button type="submit"  name="upvoteimagebutton" value="<%=p.pname%>">
                               <img   width="38" height="38" src="beforeUV.png" />
                              </button>
                              <b class="bolds">upvotes               <%=p.upvotes%></b>   
                              <%}else{%>
                                <button type="submit"  name="upvoteimagebutton" value="<%=p.pname%>" disabled>
                                    <img   width="38" height="38" src="afterUV.png" />
                                   </button>
