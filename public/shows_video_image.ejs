<script>
    $(document).ready(function(){
        $('#pic_section').hide();
        $('#video').hide();
        
        $('#pictures').click(function(){
            $('#vid_section').hide()
            $('#pictures').hide();
            $('#video').fadeIn(500);
            $('#pic_section').show('slide',{direction:'right'},500);
            

        });
        $('#video').click(function(){
            $('#video').hide();
            $('#pic_section').hide()
            
           
            $('#vid_section').show('slide',{direction:'left'},200);
            $('#pictures').fadeIn(500);
            

        });
        
        
                  
        
    });
    
</script>


    <body>
            <div id="header" >
                    <h1 align="center">THE FORUM</h1>
            </div>
            <br><br><br><br>
            
            <img   width="70" height="70" src="video.jpg" id="video"/>
            <img   width="70" height="70" src="pictures.jpg" id="pictures"/>
            
            <div id="vid_section">
                <%videos.forEach(function(v){%>
             <table>
               <tr>
                 <td>
                    <video   controls>
                        <source src="<%=v.vname%>"  type="video/mp4">
                    </video>
                    </td>
               </tr>
              
               <tr>
                  <td >
                 <form method="POST" action="/like_video">
                  <%if(v.likes==0){%>  
                    <button type="submit"  name="likebutton" value="<%=v.vname%>">

                    <img   width="38" height="38" src="bl.png" id="image_votes" />   
                  </button>
                  <%}else
                  {%>  
                    <button type="submit"  name="likebutton" value="<%=v.vname%>" disabled>
                    <img   width="38" height="38" src="al.png" id="image_votes" />  
                  </button>
                    <%}%>
                  
                    <b class="bolds">LIKES               <%=v.likes%></b>
                   
                 </form>
                 
                 <form method="POST" action="/upvote_video">

                    
                     
                      <% if(v.upvotes==0){ %>
                        <button type="submit"  name="trendbutton" value="<%=v.vname%>">
                      <img   width="38" height="38" src="beforeUV.png" id="image_votes" />
                    </button>
                      <%}
                      else
                      {
                      %>
                      <button type="submit"  name="trendbutton" value="<%=v.vname%>" disabled>
                      <img   width="38" height="38" src="afterUV.png" id="image_votes" />
                    </button>
                      <%}%>
                      
                    
                      
                      
                  
                      <b class="bolds">upvotes               <%=v.upvotes%></b>   
                
             
                </form>  
                </td>
               
                </tr>
              
                </table>
             


              
                  



                <br><br>
                <%})%>
              </div>
              
              
            
              
            <div class="pic_section" id="pic_section">
